@page
@model BookStore.RazorPages.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<form method="get">
    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search..." asp-for="SearchTerm">
        <button type="submit" id="searchButton">Search</button>
    </div>
</form>


@if (Model.Books?.Any() == true)
{
    <div class="card-container">
        @foreach (var book in Model.Books)
        {
           <a href="@Url.Page("Details", new {id = book.Id})" class="card-link">
                <div class="card">
                    <img src="@book.ImageUrl" alt="Book Cover">
                    <div class="card-content">
                        <h2 class="card-title">@book.Title</h2>
                        <p class="card-details">@book.Genre</p>
                        <p class="card-price">@book.Price.ToString("C")</p>
                    </div>
                </div>
           </a>
        }
    </div>
}
